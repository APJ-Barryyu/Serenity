{
  "extends": "./node_modules/@serenity-is/base/tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declarationDir": "./out",
    "rootDir": "./src",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@optionaldeps/*": [
        "./src/globals/*-module"
      ]
    },
    "outDir": "./out",
    "target": "ES5"
  },
  "include": [
    "src"
  ]
}